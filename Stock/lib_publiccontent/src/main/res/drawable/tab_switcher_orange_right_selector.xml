<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    
    <item android:state_checked="true">
        <shape >
            <corners 
                android:topLeftRadius="0dp"
                android:bottomLeftRadius="0dp"
                android:topRightRadius="@dimen/tab_switcher_round_corner"
                android:bottomRightRadius="@dimen/tab_switcher_round_corner"/>
            <solid android:color="@color/title_bg_color"/>
        </shape>
    </item>

    <item >
        <shape>
            <corners 
                android:topLeftRadius="0dp"
                android:bottomLeftRadius="0dp"
                android:topRightRadius="@dimen/tab_switcher_round_corner"
                android:bottomRightRadius="@dimen/tab_switcher_round_corner"/>
            <solid android:color="@android:color/transparent"/>
            <stroke android:width="1dp" android:color="@color/title_bg_color"/>
        </shape>
    </item>

</selector>
