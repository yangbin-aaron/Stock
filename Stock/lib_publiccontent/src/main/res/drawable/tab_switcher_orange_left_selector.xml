<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    
    <item android:state_checked="true">
        <shape >
            <corners 
                android:topLeftRadius="@dimen/tab_switcher_round_corner"
                android:bottomLeftRadius="@dimen/tab_switcher_round_corner"
                android:topRightRadius="0dp"
                android:bottomRightRadius="0dp"/>
            <solid android:color="@color/title_bg_color"/>
        </shape>
    </item>

    <item >
        <shape>
            <corners 
                android:topLeftRadius="@dimen/tab_switcher_round_corner"
                android:bottomLeftRadius="@dimen/tab_switcher_round_corner"
                android:topRightRadius="0dp"
                android:bottomRightRadius="0dp"/>
            <solid android:color="@android:color/transparent"/>
            <stroke android:width="1dp" android:color="@color/title_bg_color"/>
        </shape>
    </item>
</selector>
