<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00ffffff">

    <LinearLayout
        android:id="@+id/lr_account"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:background="@drawable/fr_goldholding_middle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_account_fz"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/ig_account_fz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@drawable/goldholding_fangzheng"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp" />

            <TextView
                android:id="@+id/iv_account_fz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/account_fangzheng_goldhoding"
                android:textColor="@color/color_gold"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/ig_account_fz"
                android:layout_toEndOf="@+id/ig_account_fz"
                android:layout_marginLeft="8dp"
                android:textSize="13sp"
                android:layout_marginStart="25dp" />

            <TextView
                android:id="@+id/tv_status_fz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="激活"
                android:textColor="@color/red"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:textSize="10sp"
                android:background="@drawable/goldholding_activate_column"
                android:layout_marginRight="15dp"
                android:layout_marginEnd="25dp"
                android:layout_alignTop="@+id/iv_account_fz"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_account_cn"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/ig_account_cn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@drawable/goldholding_cainiu_account"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp" />

            <TextView
                android:id="@+id/iv_account_cn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/account_cainiu_goldhoding"
                android:textColor="@color/color_gold"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/ig_account_cn"
                android:layout_toEndOf="@+id/ig_account_cn"
                android:layout_marginLeft="8dp"
                android:textSize="13sp"
                android:layout_marginStart="25dp" />

            <TextView
                android:id="@+id/tv_status_cn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="激活"
                android:textColor="@color/red"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:textSize="10sp"
                android:background="@drawable/goldholding_activate_column"
                android:layout_marginRight="15dp"
                android:layout_marginEnd="25dp"
                android:layout_alignTop="@+id/iv_account_cn"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />


        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_account_nj"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/ig_account_nj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@drawable/goldholding_najiao"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp" />

            <TextView
                android:id="@+id/iv_account_nj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/account_nanjiao_goldhoding"
                android:textColor="@color/color_gold"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/ig_account_nj"
                android:layout_toEndOf="@+id/ig_account_nj"
                android:layout_marginLeft="8dp"
                android:textSize="13sp"
                android:layout_marginStart="25dp" />

            <TextView
                android:id="@+id/tv_status_nj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="激活"
                android:textColor="@color/red"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:textSize="10sp"
                android:background="@drawable/goldholding_activate_column"
                android:layout_marginRight="15dp"
                android:layout_marginEnd="25dp"
                android:layout_alignTop="@+id/iv_account_nj"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/lr_null"
        android:layout_below="@+id/lr_account"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00ffffff"
        android:orientation="vertical"></LinearLayout>

</RelativeLayout>
