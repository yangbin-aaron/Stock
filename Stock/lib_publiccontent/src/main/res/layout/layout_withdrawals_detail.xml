<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/page_background"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

    <LinearLayout
        android:id="@+id/ry_right_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/tv_withdrawals_detail_text"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/found_title"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_withdrawals_detail_content"
            android:layout_width="0dp"
            android:layout_weight="2.5"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/text_gray"
            android:textSize="12sp"/>
    </LinearLayout>

    <View
        android:id="@+id/line_detail"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_below="@id/ry_right_about"
        android:layout_marginTop="10dp"
        android:background="@color/transparent_split_line"/>

</RelativeLayout>
